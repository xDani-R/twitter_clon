<%= form_with url: tweets_path, method: :get, local: true do |form| %>
  <%= form.label :search, "Search Tweets" %>
  <%= form.text_field :search, params[:search] %>
  <%= form.submit "Search" %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>User Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.description %></td>
        <td><%= tweet.user_name %></td>
        <td><%= link_to 'Show', tweet %></td>
        <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
        <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @tweets %>
<%= link_to 'New Tweet', new_tweet_path %>
